<Application x:Class="BolovCircus.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BolovCircus"
             StartupUri="Windows/AuthRegWindows/AuthWindow.xaml">
    <Application.Resources>
        <Style TargetType="TextBox" x:Key="TextBoxReg">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="0 10"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button" x:Key="ButtonAdmin">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Application.Resources>
</Application>
